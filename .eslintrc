{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "fetch": false,
    "FormData": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "jest",
    "react"
  ],
  "rules": {
    "no-constant-condition": "off",
    "react/no-string-refs": "off"
  }
}
